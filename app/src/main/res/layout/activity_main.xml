<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundveryblue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/upBtn"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/ic_arrow_upward_white_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/downBtn"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginBottom="92dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_arrow_downward_white_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upBtn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentHeightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='1.8"'
        android:textColor="@android:color/background_light"
        android:textSize="100sp"
        app:layout_constraintEnd_toStartOf="@+id/upBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/upBtn"
        tools:layout_editor_absoluteY="129dp" />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="784dp"
        android:layout_height="113dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

</android.support.constraint.ConstraintLayout>